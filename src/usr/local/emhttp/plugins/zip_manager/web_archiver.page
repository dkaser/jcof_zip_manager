    echo '<label style="cursor:pointer; display:flex; align-items:center; gap:0.5em;">';
    echo '<input type="checkbox" ' . ($isSelected ? 'checked' : '') . ' onclick="event.stopPropagation(); window.location=\'' . $toggleUrl . '\';">';
    echo '</label>';

    if (is_dir($path)) {
